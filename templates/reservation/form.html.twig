{% extends 'base.html.twig' %}

{% block title %}Réserver un employé{% endblock %}

{% block body %}
    <!-- Inclus les icônes et les feuilles de style nécessaires -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css">
  
    <style>
        /* Corps de la page */
        body {
            font-family: 'Arial', sans-serif;
            background: linear-gradient(135deg, #8e5a4e, #4e3b3b); /* Dégradé marron */
            color: #ecf0f1;
            margin: 0;
            padding: 0;
        }

        /* Conteneur principal */
        .container {
            background-color: #fff;
            border-radius: 12px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            padding: 40px;
            margin-top: 60px;
            max-width: 600px;
            transition: transform 0.3s ease;
        }

        .container:hover {
            transform: scale(1.02);
        }

        h1 {
            font-size: 36px;
            font-weight: 700;
            color: #5d4037; /* Gris marron pour le titre */
            text-align: center;
            margin-bottom: 30px;
        }

        h3 {
            font-size: 20px;
            font-weight: 500;
            color: #8d6e63; /* Couleur marron clair pour les sous-titres */
            margin-bottom: 20px;
        }

        .card {
            background-color: #f9f9f9;
            border: 1px solid #ddd;
            margin-bottom: 25px;
            padding: 25px;
            border-radius: 10px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        }

        .form-label {
            font-weight: 600;
            color: #5d4037;
            font-size: 16px;
        }

        .form-control {
            border-radius: 8px;
            box-shadow: none;
            border: 1px solid #ccc;
            padding: 12px 15px;
            font-size: 16px;
            transition: border-color 0.3s ease;
        }

        .form-control:focus {
            border-color: #8e5a4e;
            box-shadow: 0 0 10px rgba(141, 90, 78, 0.2);
        }

        .btn-success {
            background-color: #8e5a4e;
            border-color: #8e5a4e;
            padding: 14px 20px;
            font-size: 18px;
            font-weight: 600;
            border-radius: 8px;
            width: 100%;
            transition: background-color 0.3s ease, transform 0.2s ease;
        }

        .btn-success:hover {
            background-color: #5d4037;
            border-color: #5d4037;
            transform: translateY(-2px);
        }

        .btn-success:active {
            transform: translateY(0);
        }

        .back-button {
            display: inline-flex;
            align-items: center;
            margin-bottom: 20px;
            padding: 12px 25px;
            background: linear-gradient(135deg, #8e5a4e, #4e3b3b);
            color: white;
            font-size: 16px;
            text-decoration: none;
            border-radius: 8px;
            transition: background-color 0.3s ease;
        }

        .back-button:hover {
            background: linear-gradient(135deg, #4e3b3b, #8e5a4e);
        }

        .back-button i {
            margin-right: 10px;
        }

        .form-group {
            margin-bottom: 25px;
        }

        .form-group:last-of-type {
            margin-bottom: 0;
        }

        .stars {
            color: #f1c40f; /* Couleur dorée pour les étoiles */
        }
    </style>

    <!-- Bouton Retour -->
    <a href="{{ path('profile_index') }}" class="back-button">
        <i class="bi bi-arrow-left-circle"></i> Retour 
    </a>

    <h1>Réserver un employé</h1>

    <div class="card">
        <h3>Profil sélectionné : {{ profile.specialite }}</h3>
        <p><strong>Description :</strong> {{ profile.description }}</p>
        
        <!-- Affichage des étoiles pour la qualité de l'artisan -->
      
        <!-- Affichage des critères supplémentaires -->
        <p><strong>Critères :</strong></p>
        <ul>
            <li>Réactivité : <span class="badge bg-primary">Excellente</span></li>
            <li>Compétence technique : <span class="badge bg-warning">Bonne</span></li>
            <li>Rapidité : <span class="badge bg-success">Très rapide</span></li>
        </ul>
    </div>
 
    <form method="post">
        {{ form_start(form) }}
        <div class="form-group mb-4">
            <label for="status" class="form-label">Statut</label>
            {{ form_widget(form.status, { 'attr': {'class': 'form-control'} }) }}
        </div>
        <button type="submit" class="btn btn-success">Confirmer la Réservation</button>
        {{ form_end(form) }}
    </form>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
{% endblock %}
